
#include "Wire.h"       
#include "I2Cdev.h"     
#include "MPU6050.h"    

MPU6050 mpu;
int16_t ax, ay, az;
int16_t gx, gy, gz;
int Buzz = 10;
int incomingByte = 0;
int control_information;

struct MyData {
  byte X;
  byte Y;
};

MyData data;

void setup()
{
  Serial.begin(9600);
  Wire.begin();
  mpu.initialize();
  pinMode(LED_BUILTIN, OUTPUT);
  pinMode(Buzz, OUTPUT);
}

void loop()
{
  mpu.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);
  data.X = map(ax, -17000, 17000, 0, 255 ); // X axis data
  data.Y = map(ay, -17000, 17000, 0, 255);  // Y axis data
  //delay(500);
  

 if (data.Y < 80) { //gesture : down 
    Serial.println("s");
    delay(300);
    }
 else if (data.Y > 145) {//gesture : up
  Serial.println("w");
  delay(300);
    }
 else if (data.X > 155) {//gesture : left
  Serial.println("a");
  delay(300);
    }
 else if (data.X < 80) {//gesture : right
  Serial.println("d");
  delay(300);
    }
    
  //Python code: ser.write(b'E')
  // read from the Serial port:
  if (Serial.available() > 0) {
    // read the incoming byte:
    incomingByte = Serial.read();
    Serial.println(incomingByte);
    
    if(incomingByte == 'E') {
      // Buzzer
      digitalWrite(Buzz, HIGH);
      delay(300);
      digitalWrite(Buzz, LOW);
    }
  }
  
}
